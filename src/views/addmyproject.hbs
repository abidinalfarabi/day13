    <!-- Form Content -->
    <div class="d-flex justify-content-center">
        <form method="post" action="/addmyproject" class="form-ct mt-5 mb-5">
            <h2 class="mb-3"> ADD MY PROJECT</h2>
            <div class="mb-3">
                <label class="form-label">Project Name</label>
                <input type="text" id="inputProject" name="project" class="form-control">
            </div>
            <!-- date -->
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Start Date</label>
                    <input type="text" name="startDate" class="form-control" id="inputStart"
                        onfocus="(this.type='date')" onblur="if(!this.value)this.type='text'" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">End Date</label>
                    <input type="text" name="endDate" class="form-control" id="inputEnd" onfocus="(this.type='date')"
                        onblur="if(!this.value)this.type='text'" />
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Decription</label>
                <textarea class="form-control" id="inputDesc" name="desc" aria-label="With textarea"></textarea>
            </div>

            <div class="row mb-3">
                <label class="form-label">Technologies</label>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="d-flex align-items-center gap-2 "> <input class="form-check-input mt-0"
                                id="inputNode" name="node" type="checkbox"> Node Js</div>
                        <div class="d-flex align-items-center gap-2"> <input class="form-check-input mt-0"
                                id="inputNext" name="next" type="checkbox"> Next Js </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="d-flex align-items-center gap-2"> <input class="form-check-input mt-0"
                                id="inputReact" name="react" type="checkbox"> React Js</div>
                        <div class="d-flex align-items-center gap-2"> <input class="form-check-input mt-0"
                                id="inputTypeS" name="typeS" type="checkbox"> Typescript </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <label class="form-label">Upload Image</label>
                <!-- <div class="input-group custom-file-button mb-5" id="input-img">
