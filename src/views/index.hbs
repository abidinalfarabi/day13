<html lang="en">

  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Home</title>
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link
      rel=" stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="/assets/css/index.css" />
  </head>

  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid gap-3">
        <a class="navbar-brand ms-4" href="#">
          <img src="/assets/image/dw.png" style="height: 40px;" />
        </a>
        <!-- toggler -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 gap-3">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/addmyproject">Add Project</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/testimonial">Testimonial</a>
            </li>
          </ul>
          <a href="/contact">
            <button class="btn btn-primary me-4" id="btn-nav" type="submit">Contact Me</button>
          </a>
        </div>
      </div>
    </nav>

    <!-- Isi Content -->
    <div class="d-flex justify-content-center p-5" id="bg-based">
      <div class="card mb-7" id="card-lg">
        <div class="row mb-5 g-1 p-5 gap-4">
          <!-- artikel -->
          <div class="col-md-6 gap-4">
            <div class="card-body pb-2" id="card-bdy">
              <h4 class="card-title pt-5">Hello Welcome to my Hut</h4>
              <p class="card-text" id="cardtxt">
                Perkenalkan nama saya Muhamad Abidin berasal dari bogor.Saya Fullstack Developer, saya senang mengikuti bootcamp ini dan berharap menjadi wasilah untuk bisa memiliki kemampuan lebih dibidang IT. Terimakasih
              </p>
            </div>
            <!-- contact button -->
            <div class="d-flex gap-4 pb-5" id="card-btn">
              <button type="button" class="btn btn-primary" id="btn-ctc">Contact</button>
              <a href="" download>
                download CV
                <img class="cd2-icon" style="width: 20px; height: 20px" src="assets/icon/download.png" alt="" />
              </a>
            </div>

            <!-- icon -->
            <div class="d-flex gap-4 mt-6" id="icon">
              <a href=""><i class="fa-brands fa-linkedin fa-2xl"></i></a>
              <a href=""><i class="fa-brands fa-instagram fa-2xl"></i></a>
              <a href=""><i class="fa-brands fa-facebook fa-2xl"></i></a>
              <a href=""><i class="fa-brands fa-twitter fa-2xl"></i></a>
            </div>
          </div>

          <!-- photo -->
          <div class="card" id="card-fp" style="width: 18rem">
            <img src="./assets/image/poto1.jpg" class="card-img-top" alt="..." />
            <div class="card-body" id="card-id">
              <h4 class="card-title">Muhamad Abidin</h4>
              <p class="card-text">Fullstack Developer</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- My Project -->
    <div class="col" id="judul">
      <div class="d-flex justify-content-center mt-5">
        <h1>MY PROJECT</h1>
      </div>

      <div class="d-flex justify-content-end me-5">
        <a href="/addmyproject">
          <button class="btn btn-primary" id="btn-addP" type="submit">Add New Project</button>
        </a>
      </div>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4 p-5 flex-wrap" id="contents-in">

      <!-- disini akan diisi konten -->
      {{#each data}}
        <div class="col">
          <div class="card h-100 p-4" id="fullCard">
            <img src="/assets/image/logo2.jpg" class="card-img-top" alt="." />
            <div class="card-body">
              <a class="ttl-link" href="/myproject-detail/{{@index}}">
                <h4 class="card-title" id="card-ttl">{{this.project}}</h4>
              </a>
              <p class="card-text" id="duration"> Durasi : {{this.duration}}</p>
              <p class="card-text">{{this.desc}}</p>

              <div class="row mb-4 gap-3" id="icon">
                {{{this.techs}}}
              </div>

              <div class="row" id="btn-aksi">
                <div class="col-md-6 mb-3">
                  <a href="/update-myproject/{{@index}}" class="btn btn-primary" id="btn-edit">Edit</a>
                </div>
                <div class="col-md-6 mb-3">
                  <form method="post" action="/delete-MP/{{@index}}">
                    <button class="btn btn-primary" id="btn-dlt">Delete</button>
                  </form>
                </div>
              </div>

            </div>
          </div>
        </div>
      {{/each}}
    </div>

    <script src="/assets/js/bootstrap.bundle.min.js"></script>
  </body>

</html>