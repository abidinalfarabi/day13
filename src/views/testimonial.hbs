    <link rel="stylesheet" href="/assets/css/testimonial.css" />
  </head>

  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid gap-3">
        <a class="navbar-brand ms-4" href="#">
          <img src="/assets/image/dw.png" style="height: 40px;" />
        </a>
        <!-- toggler -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 gap-3">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/addmyproject">Add Project</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/testimonial">Testimonial</a>
            </li>
          </ul>
          <a href="/contact">
            <button class="btn btn-primary me-4" id="btn-nav" type="submit">Contact Me</button>
          </a>
        </div>
      </div>
    </nav>

    <!-- content -->
    <div class="row">
      <h1 class="text-center mt-3">My Testimonials</h1>
      <!-- Rating -->
      <div class="col">
        <h2 class="text-center mb-4 mt-4"> Rating By Star</h2>
        <div class="d-flex flex-wrap justify-content-center gap-4" id="all-btn">
          <button class="btn btn-primary mb-2" onclick="testimonialData()">
            All
          </button>
          <button class="btn btn-primary mb-2" onclick="filterTestimonials(1);">
            1
            <i class="fa-solid fa-star"></i>
          </button>
          <button class="btn btn-primary mb-2" onclick="filterTestimonials(2);">
            2
            <i class="fa-solid fa-star"></i>
          </button>
          <button class="btn btn-primary mb-2" onclick="filterTestimonials(3);">
            3
            <i class="fa-solid fa-star"></i>
          </button>
          <button class="btn btn-primary mb-2" onclick="filterTestimonials(4);">
            4
            <i class="fa-solid fa-star"></i>
          </button>
          <button class="btn btn-primary mb-2" onclick="filterTestimonials(5);">
            5
            <i class="fa-solid fa-star"></i>
          </button>
        </div>
      </div>

      <!-- konten -->
      <div class="row row-cols-1 row-cols-md-4 g-0 p-5 gap-5 justify-content-center" id="testimonials">

      </div>
    </div>

    <script src="/assets/js/ajax.js"></script>
